import (
	"std.um"
	"utf8.um"
)

fn readall(name: str): str {
    f := std.fopen(name, "rb")

    std.fseek(f, 0, std.SeekFrom.end)
    size := std.ftell(f)
    std.fseek(f, 0, std.SeekFrom.begin)

    data := make([]char, size)
    std.fread(f, &data)
    std.fclose(f)

    return str(data)
}

fn test*() {
	s := readall("../tests/utf8test2.txt")

	runes := utf8.decode(s)
	s1 := utf8.encode(runes)

	if s1 == s && len(s) > 30000 && len(runes) > 20000 {
		printf("Test passed\n")
	} else {
		printf("Test failed\n")
	}
}

fn main() {
	test()
}