import (
	"std.um"
	"utf8.um"
)

fn readall(name: str): str {
    f, err := std.fopen(name, "rb")
    std.exitif(err)
    data, err := std.freadall(f)
    std.exitif(err)
    std.fclose(f)

    return str(data)
}

fn test*() {
	s := readall("../tests/utf8test2.txt")

	runes := utf8.decode(s)
	s1 := utf8.encode(runes)

	if s1 == s && len(s) > 30000 && len(runes) > 20000 {
		printf("Test passed\n")
	} else {
		printf("Test failed\n")
	}
}

fn main() {
	test()
}