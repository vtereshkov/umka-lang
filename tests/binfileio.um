import "std.um"

fn write(name, s: str) {
	f, err := std.fopen(name, "wb")
	std.exitif(err)
	std.fwrite(f, &[]char(s))
	std.fclose(f)	
} 

fn read(name: str): str {
	f, err := std.fopen(name, "rb")
	std.exitif(err)
	data, err := std.freadall(f)
	std.exitif(err)
	std.fclose(f)

	return str(data)
}

fn test*() {
	name := "fio.txt"
	write(name, "Hello World")
	printf(read(name) + '\n')
	std.remove(name)
}

fn main() {
	test()
}