}

fn test7() {
	x := []int{}
	for i := 0; i < 100000; i++ {
		x = append(x, std::rand())
	}

	sort(x, true)

	for i := 0; i < len(x) - 1; i++ {
		std::assert(x[i + 1] >= x[i])
	}	
}

fn test8() {
	type Vec = struct {
		x, y, z: real32
	}

	v := []Vec{}
	for i := 0; i < 10000; i++ {
		v = append(v, {std::rand(), std::rand(), std::rand()})
	}

	sort(v, true, z)

	for i := 0; i < len(v) - 1; i++ {
