fn test6() {
	x := []str{"red", "green", "blue", "yellow", "gray", "brown", "black", "cyan", "magenta", "white"}

	for _, ascending in []bool{false, true} {
		sort(x, ascending)
		printf("%v\n\n", x)		
	}

	y := make([]str, 10)
	y[5] = "hi"
	y[8] = "bye"

	sort(y, false)
