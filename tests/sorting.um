	}	
}

fn test9() {
	type Vec = struct {
		x, y, z: real32
	}

	v := []Vec{}
	for i := 0; i < 10000; i++ {
		v = append(v, {std::rand(), std::rand(), std::rand()})
	}

	sort(v, false)

	for i := 0; i < len(v) - 1; i++ {
		std::assert(v[i + 1] <= v[i])
	}	
}

