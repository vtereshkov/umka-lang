fn test11() {
    m := make([][]int, 10)
    for i in m {
        m[i] = make([]int, 10)
        for j in m[i] {
            m[i][j] = 2 + (i % 7) - (j % 3)
        }
    }

    for i in m {
        printf("%v\n", m[i])
    }
    printf("\n")

    for i in m {
        sort(m[i], true)
    }
    sort(m, true)

    for i in m {
        printf("%v\n", m[i])
    } 
}

