import (
	"std.um"
	"utf8.um"
)

fn testStr(s: str) {
	printf("string: %s\n", s)
	printf("bytes: %lld\ncharacters: %lld\n", len(s), utf8::runeCount(s))

	runes := utf8::decode(s)
	for _, r in runes {
		printf("%s: U+%x\n", r.encode(), r)
	}

	s1 := utf8::encode(runes)
	std::assert(s1 == s, "UTF-8 encoding failed")

	printf("reconstructed string: %s\n", s1)
	printf("\n")	
}

fn test*() {
	testStr("▀€$¢")
	testStr("Привет, мир!")
	testStr("Hello, 世界")
}

fn main() {
	test()
}
