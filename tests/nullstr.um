fn testStr() {
	var s1, s2, s3: str
	s4 := "Hello "

	printf(s1)
	scanf(s1)

	printf("s2 = %s\n", s2)
	printf(repr(s1) + repr(s2) + repr(s3) + repr(s4) + '\n')

	chars := []char(s2)
	printf(repr(chars) + '\n')

	printf("len = %d, %d\n", len(s2), len(s4))

	s5 := s1 + s2 + s4 + s3
	printf(s5 + '\n')

	printf(repr(s1 == s2) + repr(s1 < s2) + repr(s1 >= s2) + '\n')
	printf(repr(s1 == s4) + repr(s1 < s4) + repr(s1 >= s4) + '\n')
}

fn checkArr(a: []str) {
	printf('\n' + repr(a) + '\n')
	for i, x in a {
		printf("    Item #" + repr(i) + " = " + repr(x) + '\n')
	}
	printf("len = " + repr(len(a)) + "  cap = " + repr(cap(a)) + '\n')
}

fn testArr() {
	var a, b, c: []str
	c = []str{"Hel" + "lo", "Wor" + "ld"}

	checkArr(a)
	checkArr(b)
	checkArr(c)
	checkArr(append(copy(a), b))
	checkArr(append(copy(a), c))
	checkArr(append(copy(c), a))
	checkArr(insert(copy(a), 0, c[1]))
	checkArr(slice(a, 0, 0))

	printf('\n' + repr([2]str(a)) + repr([2]str(c)) + '\n')

	var d: []char
	printf(repr(str(d)) + '\n')
}

fn checkMap(a: map[str]str) {
	printf('\n' + repr(a) + '\n')
	for i, x in a {
		printf("    Item " + repr(i) + " = " + repr(x) + '\n')
	}
	printf("len = " + repr(len(a)) + '\n')
}

fn mk(): map[str]str {
	var e: map[str]str
	return e
}

fn testMap() {
	var a, b, c, d: map[str]str
	c = map[str]str{"Hel" + "lo": "Wor" + "ld"}

	b = mk()

	b["Ha" + "ha"] = "Ho" + "ho"
	b["He" + "he"] = "Hu" + "hu"

	d["Bu" + "bu"] = "Bo" + "bo"

	checkMap(a)
	checkMap(b)
	checkMap(c)
	checkMap(d)
}

fn test*() {
	testStr()
	testArr()
	testMap()
}

fn main() {
	test()
}